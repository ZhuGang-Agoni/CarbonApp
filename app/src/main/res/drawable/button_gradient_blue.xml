<ripple xmlns:android="http://schemas.android.com/apk/res/android"
	android:color="#FFFFFF33"> <!-- 点击水波纹效果 -->
	<item>
		<shape android:shape="rectangle">
			<gradient
				android:type="linear"
				android:startColor="#2196F3"
				android:endColor="#00BCD4"
				android:angle="90"/>
			<corners android:radius="30dp"/> <!-- 圆角 -->
			<padding
				android:left="16dp"
				android:right="16dp"/>
		</shape>
	</item>
</ripple>