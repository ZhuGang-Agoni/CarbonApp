<ripple xmlns:android="http://schemas.android.com/apk/res/android"
	android:color="?attr/colorControlHighlight"> <!-- 水波纹颜色 -->
	<item android:id="@android:id/content">
		<shape android:shape="rectangle">
			<!-- 从上到下的深绿→浅绿渐变，模拟光影 -->
			<gradient
				android:type="linear"
				android:startColor="#FF00897B"
				android:endColor="#FF00695C"
				android:angle="90"/>
			<corners android:radius="28dp"/> <!-- 大圆角，更柔和 -->
			<padding
				android:left="16dp"
				android:right="16dp"/>
		</shape>
	</item>
</ripple>