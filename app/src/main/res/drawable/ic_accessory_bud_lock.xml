<vector xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:aapt="http://schemas.android.com/aapt"
	android:width="48dp"
	android:height="48dp"
	android:viewportWidth="100"
	android:viewportHeight="100">

	<!-- 赛博基底 -->
	<path
		android:pathData="M50,20 L50,50 Q40,70 60,70 Q70,50 50,20 Z"
		android:strokeWidth="2"
		android:strokeColor="#FF00FF">
		<aapt:attr name="android:fillColor">
			<gradient
				android:type="linear"
				android:angle="45"
				android:startX="30"
				android:startY="30"
				android:endX="70"
				android:endY="70">
				<item android:color="#FF00FF" android:offset="0"/>
				<item android:color="#00FFFF" android:offset="1"/>
			</gradient>
		</aapt:attr>
	</path>

	<!-- 能量核心 -->
	<path
		android:pathData="M50,50 L45,60 L55,60 Z"
		android:fillColor="#FFFFFF"
		android:fillAlpha="0.8"/>

	<!-- 数据干扰层 -->
	<path
		android:pathData="M30,30 L35,25 M70,30 L65,25"
		android:strokeWidth="1"
		android:strokeColor="#00FFFF"
		android:strokeAlpha="0.5"/>
</vector>