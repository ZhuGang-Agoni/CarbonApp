<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <!-- 顶部导航栏 -->
    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/primary"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:text="身临其境"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/searchButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_search" />
    </LinearLayout>

    <!-- 主要内容区域 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- 标题 -->
            <TextView
                android:id="@+id/tvComingSoon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AR低碳场景体验"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/green_dark"
                android:layout_gravity="center"
                android:layout_marginBottom="32dp" />

            <!-- AR扫描绿色空间 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:strokeColor="@color/green_light"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🌳 AR扫描绿色空间"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/green_dark"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="扫描城市中的公园、绿地，展示这些绿色空间对碳吸收的贡献"
                        android:textSize="14sp"
                        android:textColor="@color/gray"
                        android:layout_marginBottom="16dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnScanGreenSpace"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="开始扫描"
                        android:textColor="@color/white"
                        app:backgroundTint="@color/green_dark"
                        app:cornerRadius="8dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- 虚拟场景体验 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:strokeColor="@color/blue_light"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🎮 虚拟场景体验"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/blue_light"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="在虚拟场景中展示不同低碳行为对环境改善的效果"
                        android:textSize="14sp"
                        android:textColor="@color/gray"
                        android:layout_marginBottom="16dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnVirtualExperience"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="开始体验"
                        android:textColor="@color/white"
                        app:backgroundTint="@color/blue_light"
                        app:cornerRadius="8dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>





            <!-- 功能说明 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="💡 功能说明：\n\n• AR扫描：利用相机扫描周围环境，识别绿色空间并计算碳吸收效果\n• 虚拟体验：通过互动场景展示不同低碳行为的环境影响"
                android:textSize="14sp"
                android:textColor="@color/gray"
                android:gravity="center"
                android:lineSpacingExtra="4dp"
                android:layout_marginTop="16dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>