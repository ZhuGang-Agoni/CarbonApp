<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/bg_rounded_card"
    android:backgroundTint="@color/colorBackground">

    <!-- 照片显示区域 -->
    <ImageView
        android:id="@+id/iv_photo"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="12dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- 记录标题 -->
    <TextView
        android:id="@+id/tv_record_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="挑战记录"
        android:textColor="@color/text_primary"
        android:textSize="16sp"
        android:textStyle="bold"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintTop_toTopOf="@id/iv_photo"
        app:layout_constraintStart_toEndOf="@id/iv_photo"
        app:layout_constraintEnd_toStartOf="@id/tv_record_time" />

    <!-- 记录时间 -->
    <TextView
        android:id="@+id/tv_record_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:text="2025-07-22 19:56"
        android:textColor="@color/text_secondary"
        android:textSize="12sp"
        app:layout_constraintTop_toTopOf="@id/tv_record_title"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 记录详情 -->
    <TextView
        android:id="@+id/tv_record_detail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:text="得分: 100, 正确 10/10"
        android:textColor="@color/text_secondary"
        android:textSize="14sp"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintTop_toBottomOf="@id/tv_record_title"
        app:layout_constraintStart_toEndOf="@id/iv_photo"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>