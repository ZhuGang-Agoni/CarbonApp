<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/main"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".ui.weather.WeatherActivity">
	<androidx.drawerlayout.widget.DrawerLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/drawerLayout"
		android:layout_width="match_parent"
		android:layout_height="match_parent">

	<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/swipeRefresh"
	android:layout_width="match_parent"
	android:layout_height="match_parent">


		<ScrollView
			xmlns:android="http://schemas.android.com/apk/res/android"
			android:id="@+id/weatherLayout"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:scrollbars="none"
			android:overScrollMode="never"
			android:visibility="invisible"
			android:paddingBottom="20dp"> <!-- 底部留空，避免内容被遮挡 -->

			<LinearLayout
				android:orientation="vertical"
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

				<!-- 原有天气布局 -->
				<include layout="@layout/now" />
				<include layout="@layout/forecast" />
				<include layout="@layout/life_index"/>

				<!-- 新增：AI出行建议区域（放在ScrollView内部，随滚动显示） -->
				<LinearLayout
					android:id="@+id/aiSuggestionContainer"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginStart="16dp"
					android:layout_marginEnd="16dp"
					android:layout_marginTop="20dp"
					android:padding="16dp"
					android:background="@drawable/ai_suggestion_bg"
					android:orientation="vertical">

					<!-- 建议标题栏 -->
					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:gravity="center_vertical"
						android:layout_marginBottom="12dp">

						<ImageView
							android:layout_width="24dp"
							android:layout_height="24dp"
							android:src="@drawable/ai_icon"
						android:contentDescription="AI建议" />

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="AI出行建议"
							android:textSize="18sp"
							android:textStyle="bold"
							android:textColor="@color/text_primary"
							android:layout_marginStart="8dp" />
					</LinearLayout>

					<!-- 建议内容（流式输出区域） -->
					<TextView
						android:id="@+id/tvAISuggestion"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:text="正在生成建议..."
						android:textSize="15sp"
						android:textColor="@color/text_secondary"
						android:lineSpacingMultiplier="1.3"
						android:minLines="3" /> <!-- 确保至少显示3行，避免内容过短时布局变形 -->

				</LinearLayout>

			</LinearLayout>

		</ScrollView>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
		<FrameLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_gravity="start"
			android:clickable="true"
			android:focusable="true"
			android:background="@color/white">
			<fragment
				android:id="@+id/placeFragment"
				android:name="com.zg.carbonapp.ui.place.PlaceFragment"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_marginTop="25dp"/>
		</FrameLayout>
	</androidx.drawerlayout.widget.DrawerLayout>


</androidx.constraintlayout.widget.ConstraintLayout>