<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="32dp"
    android:background="@drawable/gradient_background">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_footprint"
        android:layout_marginBottom="32dp"
        android:contentDescription="Google Fit图标" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="连接Google Fit"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="连接Google Fit可以获取更准确的步数数据，帮助您更好地追踪碳足迹"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginBottom="32dp" />

    <Button
        android:id="@+id/btnGoogleFitLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="连接Google Fit"
        android:textSize="18sp"
        android:background="@drawable/bg_button_primary"
        android:textColor="@color/white"
        android:padding="16dp"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnSkip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="跳过"
        android:textSize="16sp"
        android:background="@drawable/bg_rounded_textview"
        android:textColor="@color/white"
        android:padding="12dp" />

</LinearLayout> 