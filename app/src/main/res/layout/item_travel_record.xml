<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_marginBottom="8dp"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <!-- 第一行：图标 + 出行方式/地址 + 时间 + 箭头 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- 出行方式图标 -->
        <ImageView
            android:id="@+id/ivModeIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_bus"
            android:contentDescription="@string/app_name"/>

        <!-- 中间内容区（占满剩余空间，允许地址多行显示） -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            android:layout_weight="1">

            <!-- 出行方式名称 -->
            <TextView
                android:id="@+id/tvModeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="公交"
                android:textSize="18sp"
                android:textColor="@color/green_dark"
                android:textStyle="bold" />

            <!-- 起止地址：移除单行限制，允许多行完全显示 -->
            <TextView
                android:id="@+id/tvAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="北京市海淀区中关村大街1号 → 北京市朝阳区建国路88号"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- 右侧区域：时间 + 箭头 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2023-07-01 08:30"
                android:textSize="14sp"
                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/ivArrow"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/cc_arrow_right"
                android:layout_marginStart="8dp"
                android:contentDescription="查看详情"/>
        </LinearLayout>
    </LinearLayout>

    <!-- 第二行：距离 + 减碳量 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        android:gravity="start">

        <TextView
            android:id="@+id/tvDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5.2 km"
            android:textSize="14sp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tvCarbon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="减碳 1.2 kg"
            android:textSize="14sp"
            android:textColor="@color/green_light"
            android:layout_marginStart="24dp"/>
    </LinearLayout>
</LinearLayout>