<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	tools:context=".Fragment.ImFragment">

	<!-- TODO: Update blank fragment layout -->
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="50dp"
		android:orientation="horizontal"
		>
		<ImageView
			android:id="@+id/return_back"
			android:layout_width="28dp"
			android:layout_height="28dp"
			android:layout_gravity="center_vertical"
			android:src="@drawable/resource_return" />

		<TextView
			android:layout_width="0dp"
			android:layout_weight="1"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:gravity="center"
			android:layout_marginStart="10dp"
			android:text="个人主页"
			android:textSize="23sp"
			android:textStyle="bold" />

		<TextView
			android:id="@+id/user_profile_submit"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:gravity="center_vertical"
			android:padding="4dp"
			android:text="保存"
			android:textSize="18sp"
			android:textStyle="bold" />

	</LinearLayout>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		android:id="@+id/im_layout">

		<com.google.android.material.card.MaterialCardView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="20dp"
			android:layout_marginHorizontal="10dp">
<LinearLayout
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="40dp"
			android:id="@+id/user_evator"
			android:text="头像："
			android:textSize="25dp"
			android:layout_marginStart="20dp"/>

		<ImageView
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:src="@drawable/img"
			android:id="@+id/user_evator_name"
			android:layout_gravity="right"
			android:layout_marginHorizontal="250dp"
			android:gravity="right"/>


	</LinearLayout>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="40dp"
			android:id="@+id/user_count"
			android:text="账号："
			android:textSize="25dp"
			android:layout_marginStart="20dp"/>

		<TextView
			android:layout_width="match_parent"
			android:layout_height="40dp"
			android:id="@+id/user_count_name"
			android:text="Agoni"
			android:textSize="25dp"
			android:layout_gravity="right"
			android:gravity="right"/>


	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="40dp"
			android:id="@+id/user_password"
			android:text="密码："
			android:textSize="25dp"
			android:layout_marginStart="20dp"/>

		<TextView
			android:layout_width="match_parent"
			android:layout_height="40dp"
			android:id="@+id/user_password_name"
			android:text="123456"
			android:textSize="25dp"
			android:layout_gravity="right"
			android:gravity="right"/>


	</LinearLayout>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="40dp"
			android:id="@+id/user_email"
			android:text="邮箱："
			android:textSize="25dp"
			android:layout_marginStart="20dp"/>

		<TextView
			android:layout_width="match_parent"
			android:layout_height="40dp"
			android:id="@+id/user_email_name"
			android:text="邮箱名"
			android:textSize="25dp"
			android:layout_gravity="right"
			android:gravity="right"/>


	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="40dp"
			android:id="@+id/user_signature"
			android:text="个性签名："
			android:textSize="25dp"
			android:layout_marginStart="20dp"/>

		<TextView
			android:layout_width="match_parent"
			android:layout_height="40dp"
			android:id="@+id/user_signature_name"
			android:text="Fighting"
			android:textSize="25dp"
			android:layout_gravity="right"
			android:gravity="right"/>


	</LinearLayout>



</LinearLayout>



		</com.google.android.material.card.MaterialCardView>

		<com.google.android.material.card.MaterialCardView
			android:layout_width="match_parent"
			android:layout_height="350dp"
			android:layout_marginHorizontal="10dp"
			android:layout_marginTop="20dp">
<LinearLayout
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="40dp"
			android:id="@+id/count_security"
			android:text="账号安全："
			android:textSize="25dp"
			android:layout_marginStart="20dp"/>

		<ImageView
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:src="@drawable/right"
			android:id="@+id/count_security_next"
			android:layout_gravity="right"
			android:layout_marginHorizontal="200dp"
			android:gravity="right"
			/>


	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="40dp"
			android:id="@+id/notify_setting"
			android:text="通知设置："
			android:textSize="25dp"
			android:layout_marginStart="20dp"/>

		<ImageView
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:src="@drawable/right"
			android:id="@+id/notify_setting_next"
			android:layout_gravity="right"
			android:layout_marginHorizontal="200dp"
			android:gravity="right"
			/>


	</LinearLayout>



</LinearLayout>



		</com.google.android.material.card.MaterialCardView>

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="退出登录"
			android:textSize="25dp"
			android:textColor="@color/blue"
			android:gravity="center_horizontal"
			android:layout_marginTop="20dp"/>


	</LinearLayout>

</LinearLayout>