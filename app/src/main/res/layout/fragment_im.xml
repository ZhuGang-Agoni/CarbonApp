<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:fitsSystemWindows="true">

	<!-- 顶部导航栏 -->
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="50dp"
		android:orientation="horizontal"
		android:background="@android:color/white"
		android:elevation="2dp">

		<ImageView
			android:id="@+id/return_back"
			android:layout_width="28dp"
			android:layout_height="28dp"
			android:layout_gravity="center_vertical"
			android:layout_marginStart="16dp"
			android:src="@drawable/resource_return" />

		<TextView
			android:layout_width="0dp"
			android:layout_weight="1"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:gravity="center"
			android:text="个人主页"
			android:textSize="20sp"
			android:textStyle="bold" />

		<TextView
			android:id="@+id/user_profile_submit"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:layout_marginEnd="16dp"
			android:padding="4dp"
			android:text="保存"
			android:textSize="16sp"
			android:textStyle="bold" />
	</LinearLayout>

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:fillViewport="true">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:paddingHorizontal="16dp"
			android:paddingVertical="20dp">

			<!-- 新增：登录提示控件（未登录时显示） -->
			<TextView
				android:id="@+id/loginPrompt"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="16dp"
				android:background="#E8F5E9"
			android:padding="12dp"
			android:text="点击登录查看个人信息"
			android:textColor="#00796B"
			android:textSize="16sp"
			android:textStyle="bold"
			android:gravity="center"
			android:visibility="gone"
			android:clickable="true"
			android:focusable="true"/>

			<!-- 个人信息卡片 -->
			<com.google.android.material.card.MaterialCardView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="16dp"
				app:cardCornerRadius="12dp"
				app:cardElevation="4dp">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="vertical"
					android:padding="16dp">

					<!-- 头像区域 -->
					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="horizontal"
						android:gravity="center_vertical"
						android:paddingVertical="8dp">

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="头像："
							android:textSize="18sp"
							android:textColor="@android:color/black" />

						<com.google.android.material.imageview.ShapeableImageView
							android:id="@+id/ivAvatar"
							android:layout_width="48dp"
							android:layout_height="48dp"
							android:layout_marginStart="250dp"
							android:layout_gravity="end"
							android:src="@drawable/default_avatar"
							android:scaleType="centerCrop"
							app:shapeAppearanceOverlay="@style/AvatarShapeAppearance" />

					</LinearLayout>

					<!-- 账号区域 -->
					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="horizontal"
						android:gravity="center_vertical"
						android:paddingVertical="8dp">

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="用户账号："
							android:textSize="18sp"
							android:textColor="@android:color/black" />

						<TextView
							android:id="@+id/user_count"
							android:layout_width="0dp"
							android:layout_weight="1"
							android:layout_height="wrap_content"
							android:layout_marginStart="16dp"
							android:gravity="end"
							android:text="12345678"
							android:textColor="@android:color/black"
							android:textSize="18sp" />
					</LinearLayout>

					<!-- 用户名区域 -->
					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="horizontal"
						android:gravity="center_vertical"
						android:paddingVertical="8dp">

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="用户名："
							android:textSize="18sp"
							android:textColor="@android:color/black" />

						<TextView
							android:id="@+id/user_name_edit"
							android:layout_width="0dp"
							android:layout_weight="1"
							android:layout_height="wrap_content"
							android:layout_marginStart="16dp"
							android:gravity="end"
							android:text="点击编辑用户名"
							android:textSize="18sp"
							android:textColor="@android:color/black" />
					</LinearLayout>

					<!-- 碳排放区域 -->
					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="horizontal"
						android:gravity="center_vertical"
						android:paddingVertical="8dp">

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="碳积分："
							android:textSize="18sp"
							android:textColor="@android:color/black" />

						<TextView
							android:id="@+id/user_carbon_count"
							android:layout_width="0dp"
							android:layout_weight="1"
							android:layout_height="wrap_content"
							android:layout_marginStart="16dp"
							android:gravity="end"
							android:text="10000"
							android:textSize="18sp"
							android:textColor="@android:color/black" />
					</LinearLayout>

					<!-- 签名区域 -->
					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="horizontal"
						android:gravity="center_vertical"
						android:paddingVertical="8dp">

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="个性签名："
							android:textSize="18sp"
							android:textColor="@android:color/black" />

						<TextView
							android:id="@+id/user_signature_edit"
							android:layout_width="0dp"
							android:layout_weight="1"
							android:layout_height="wrap_content"
							android:layout_marginStart="16dp"
							android:gravity="end"
							android:text="点击编辑个性签名"
							android:textSize="18sp"
							android:textColor="@android:color/black" />
					</LinearLayout>
				</LinearLayout>
			</com.google.android.material.card.MaterialCardView>

			<!-- 隐私信息折叠面板 -->
			<com.google.android.material.card.MaterialCardView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="16dp"
				app:cardCornerRadius="12dp"
				app:cardElevation="4dp">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="vertical">

					<!-- 折叠面板标题 -->
					<LinearLayout
						android:id="@+id/privacy_header"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="horizontal"
						android:gravity="center_vertical"
						android:padding="16dp"
						android:clickable="true">

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="隐私信息"
							android:textSize="18sp"
							android:textColor="@android:color/black"
							android:textStyle="bold" />

						<ImageView
							android:id="@+id/privacy_arrow"
							android:layout_width="24dp"
							android:layout_height="24dp"
							android:layout_marginStart="8dp"
							android:src="@drawable/arrow_down_filling"
							android:contentDescription="展开/收起" />
					</LinearLayout>

					<!-- 分隔线 -->
					<View
						android:layout_width="match_parent"
						android:layout_height="1dp"
						android:background="#E0E0E0" />

					<!-- 隐私信息内容 -->
					<LinearLayout
						android:id="@+id/privacy_content"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="vertical"
						android:padding="16dp">

						<!-- 密码 -->
						<LinearLayout
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:orientation="horizontal"
							android:gravity="center_vertical"
							android:paddingVertical="8dp">

							<TextView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="密码："
								android:textSize="18sp"
								android:textColor="@android:color/black" />

							<TextView
								android:id="@+id/user_password_name"
								android:layout_width="0dp"
								android:layout_weight="1"
								android:layout_height="wrap_content"
								android:layout_marginStart="16dp"
								android:text="●●●●●●"
								android:textSize="18sp"
								android:textColor="@android:color/black"
								android:gravity="end" />
						</LinearLayout>

						<!-- 电话号码 -->
						<LinearLayout
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:orientation="horizontal"
							android:gravity="center_vertical"
							android:paddingVertical="8dp">

							<TextView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="电话："
								android:textSize="18sp"
								android:textColor="@android:color/black" />

							<TextView
								android:id="@+id/user_phone_name"
								android:layout_width="0dp"
								android:layout_weight="1"
								android:layout_height="wrap_content"
								android:layout_marginStart="16dp"
								android:text="138****1234"
								android:textSize="18sp"
								android:textColor="@android:color/black"
								android:gravity="end" />
						</LinearLayout>

						<!-- QQ号 -->
						<LinearLayout
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:orientation="horizontal"
							android:gravity="center_vertical"
							android:paddingVertical="8dp">

							<TextView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="QQ："
								android:textSize="18sp"
								android:textColor="@android:color/black" />

							<TextView
								android:id="@+id/user_qq_name"
								android:layout_width="0dp"
								android:layout_weight="1"
								android:layout_height="wrap_content"
								android:layout_marginStart="16dp"
								android:text="12345678"
								android:textSize="18sp"
								android:textColor="@android:color/black"
								android:gravity="end" />
						</LinearLayout>
					</LinearLayout>
				</LinearLayout>
			</com.google.android.material.card.MaterialCardView>

			<!-- 账号设置卡片 -->
			<com.google.android.material.card.MaterialCardView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="16dp"
				app:cardCornerRadius="12dp"
				app:cardElevation="4dp">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="vertical">

					<!-- 账号安全 -->
					<LinearLayout
						android:id="@+id/security_layout"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="horizontal"
						android:gravity="center_vertical"
						android:padding="16dp"
						android:clickable="true">

						<ImageView
							android:layout_width="24dp"
							android:layout_height="24dp"
							android:src="@drawable/security"
							android:contentDescription="账号安全" />

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginStart="16dp"
							android:text="账号安全"
							android:textSize="18sp"
							android:textColor="@android:color/black" />

						<ImageView
							android:layout_width="24dp"
							android:layout_height="24dp"
							android:layout_marginStart="210dp"
							android:layout_gravity="end"
							android:src="@drawable/right"
							android:contentDescription="前往" />
					</LinearLayout>

					<!-- 分隔线 -->
					<View
						android:layout_width="match_parent"
						android:layout_height="1dp"
						android:background="#E0E0E0" />

					<!-- 通知设置 -->
					<LinearLayout
						android:id="@+id/notify_layout"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="horizontal"
						android:gravity="center_vertical"
						android:padding="16dp"
						android:clickable="true">

						<ImageView
							android:layout_width="24dp"
							android:layout_height="24dp"
							android:src="@drawable/notify"
							android:contentDescription="通知设置" />

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginStart="16dp"
							android:text="通知设置"
							android:textSize="18sp"
							android:textColor="@android:color/black" />

						<ImageView
							android:layout_width="24dp"
							android:layout_height="24dp"
							android:layout_marginStart="210dp"
							android:layout_gravity="end"
							android:src="@drawable/right"
							android:contentDescription="前往" />
					</LinearLayout>
				</LinearLayout>
			</com.google.android.material.card.MaterialCardView>

			<!-- 退出登录 -->
			<TextView
				android:id="@+id/logout_text"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="24dp"
				android:padding="16dp"
				android:text="退出登录"
				android:textSize="18sp"
				android:textColor="#F44336"
				android:gravity="center"
				android:background="@drawable/bg_rounded_textview"
				android:clickable="true" />
		</LinearLayout>
	</ScrollView>
</LinearLayout>