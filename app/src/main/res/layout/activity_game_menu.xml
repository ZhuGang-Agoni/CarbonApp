<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@drawable/menu_bg_gradient"
	android:fitsSystemWindows="true">

	<!-- 标题区域 -->
	<TextView
		android:id="@+id/tv_title"
		android:layout_marginTop="100dp"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="垃圾分类挑战"
		android:textSize="48sp"
		android:textColor="#FFFFFF"
		android:textStyle="bold"
		android:shadowColor="#44000000"
		android:shadowRadius="8"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		/>

	<TextView
		android:id="@+id/tv_subtitle"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="正确分类 · 守护环境"
		android:textSize="25sp"
		android:textColor="#DDFFFFFF"
		app:layout_constraintTop_toBottomOf="@id/tv_title"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
	/>

	<!-- 按钮区域（垂直排列，等距分布） -->
	<Button
		android:id="@+id/btn_start"
		android:layout_width="0dp"
		android:layout_height="56dp"
		android:text="开始游戏"
		android:textSize="20sp"
		android:textColor="#FFFFFF"
		android:background="@drawable/btn_gradient_green"
		android:layout_marginTop="100dp"
		android:layout_marginStart="40dp"
		android:layout_marginEnd="40dp"
		app:layout_constraintTop_toBottomOf="@id/tv_subtitle"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
	/>

	<Button
		android:id="@+id/btn_history"
		android:layout_width="0dp"
		android:layout_height="56dp"
		android:text="历史记录"
		android:textSize="20sp"
		android:textColor="#FFFFFF"
		android:background="@drawable/button_gradient_blue"
		android:drawableStart="@drawable/ic_history"
		android:layout_marginStart="40dp"
		android:layout_marginEnd="40dp"
		android:layout_marginTop="20dp"
		app:layout_constraintTop_toBottomOf="@id/btn_start"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
	/>

	<Button
		android:id="@+id/btn_settings"
		android:layout_width="0dp"
		android:layout_height="56dp"
		android:text="游戏设置"
		android:textSize="20sp"
		android:layout_marginTop="20dp"
		android:textColor="#FFFFFF"
		android:background="@drawable/button_gradient_orange"
		android:drawableStart="@drawable/ic_settings"
		android:drawablePadding="12dp"
		android:layout_marginStart="40dp"
		android:layout_marginEnd="40dp"
		app:layout_constraintTop_toBottomOf="@id/btn_history"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
/>

	<Button
		android:id="@+id/btn_exit"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="退出游戏"
		android:textSize="20sp"
		android:textColor="#BDBDBD"
		android:background="@android:color/transparent"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
/>

	<!-- 版本信息 -->
	<TextView
		android:id="@+id/tv_version"
		android:layout_width="68dp"
		android:layout_height="43dp"
		android:text="v1.0.0"
		android:textColor="#9E9E9E"
		android:textSize="20sp"
		android:gravity="center"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintRight_toRightOf="parent"


		/>

</androidx.constraintlayout.widget.ConstraintLayout>