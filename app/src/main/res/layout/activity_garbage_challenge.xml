<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_eco_pattern"
    android:fitsSystemWindows="true">

    <!-- 顶部导航栏 -->
    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@drawable/bg_gradient_green"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:elevation="8dp">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="4dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:text="分类挑战"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="得分: 0"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/bg_rounded_score"
            android:padding="8dp" />

    </LinearLayout>

    <!-- 进度条区域 -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:strokeColor="@color/green_primary"
        app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_challenge_trophy"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/tv_progress"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="1/10"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="挑战进度"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp" />

            </LinearLayout>

            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/progress_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:indicatorColor="@color/orange_challenge"
                app:trackColor="@color/green_light"
                app:trackThickness="8dp"
                app:indicatorSize="8dp" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- 垃圾图片区域 -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:strokeColor="@color/green_primary"
        app:strokeWidth="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_gradient_green"
            android:padding="24dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="这是什么垃圾？"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iv_garbage_image"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:scaleType="fitCenter"
                android:background="@drawable/bg_rounded_image"
                android:padding="16dp"
                android:src="@drawable/ic_leaf"
                android:contentDescription="垃圾图片" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- 选项按钮区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- 第一行 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="5dp">

            <!-- 可回收物 -->
            <LinearLayout
                android:id="@+id/btn_recyclable"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/bg_gradient_recyclable"
                android:padding="20dp">

                <ImageView
                    android:src="@drawable/ic_recyclable"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginBottom="5dp"
                    android:tint="@color/white"/>

                <TextView
                    android:text="可回收物"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <!-- 有害垃圾 -->
            <LinearLayout
                android:id="@+id/btn_hazardous"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/bg_gradient_hazardous"
                android:padding="20dp">

                <ImageView
                    android:src="@drawable/ic_hazardous"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginBottom="5dp"
                    android:tint="@color/white"/>

                <TextView
                    android:text="有害垃圾"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

        <!-- 第二行 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- 厨余垃圾 -->
            <LinearLayout
                android:id="@+id/btn_kitchen"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/bg_gradient_kitchen"
                android:padding="20dp">

                <ImageView
                    android:src="@drawable/ic_kitchen"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginBottom="5dp"
                    android:tint="@color/white"/>

                <TextView
                    android:text="厨余垃圾"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <!-- 其他垃圾 -->
            <LinearLayout
                android:id="@+id/btn_other"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/bg_gradient_other"
                android:padding="20dp">

                <ImageView
                    android:src="@drawable/ic_other"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginBottom="5dp"
                    android:tint="@color/white"/>

                <TextView
                    android:text="其他垃圾"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>