    android:layout_height="wrap_content"
    android:gravity="start"
    android:padding="8dp">

    <!-- 气泡容器：宽度自适应内容，左侧对齐 -->
<LinearLayout
android:layout_width="wrap_content"
android:layout_height="wrap_content"
