<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_marginBottom="12dp"
	app:cardBackgroundColor="@color/card_background"
	app:cardCornerRadius="12dp"
	app:cardElevation="2dp">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:padding="12dp">

		<!-- 商品图标 -->
		<ImageView
			android:id="@+id/productIcon"
			android:layout_width="80dp"
			android:layout_height="80dp"
			android:scaleType="centerCrop"
			android:src="@drawable/tree"
			android:contentDescription="商品图标" />

		<!-- 中间文本区域 -->
		<LinearLayout
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginStart="12dp"
			android:layout_weight="1"
			android:orientation="vertical">

			<!-- 商品名称 -->
			<TextView
				android:id="@+id/productName"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="环保达人勋章"
				android:textColor="@color/primary_text"
				android:textSize="16sp"
				android:textStyle="bold" />

			<!-- 稀有度文本 -->
			<TextView
				android:id="@+id/rarityText"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="4dp"
				android:text="史诗"
				android:textSize="12sp"
				android:textStyle="italic" />

			<!-- 商品描述 -->
			<TextView
				android:id="@+id/productDescription"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="4dp"
				android:text="解锁条件：累计减碳50kg"
				android:textColor="@color/secondary_text"
				android:textSize="12sp" />

			<!-- 所需积分 -->
			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="8dp"
				android:gravity="center_vertical"
				android:orientation="horizontal">

				<ImageView
					android:layout_width="16dp"
					android:layout_height="16dp"
					android:src="@drawable/ic_points_small"
					android:contentDescription="积分图标" />

				<TextView
					android:id="@+id/productPoints"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginStart="4dp"
					android:text="800"
					android:textColor="@color/primary"
					android:textSize="14sp"
					android:textStyle="bold" />
			</LinearLayout>
		</LinearLayout>

		<!-- 右侧按钮区域 -->
		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginStart="8dp"
			android:gravity="center"
			android:orientation="vertical">

			<!-- 预览按钮：增加内边距，调整高度确保文本显示完整 -->
			<Button
				android:id="@+id/previewButton"
				android:layout_width="wrap_content"
				android:layout_height="36dp"
			android:backgroundTint="@color/button_background"
			android:paddingHorizontal="16dp"
			android:text="预览"
			android:textColor="@color/primary_text"
			android:textSize="12sp"
			app:cornerRadius="18dp" />  <!-- 圆角值随高度调整 -->

			<!-- 兑换按钮：增加内边距，调整高度确保文本显示完整 -->
			<Button
				android:id="@+id/exchangeButton"
				android:layout_width="wrap_content"
				android:layout_height="36dp"
			android:layout_marginTop="8dp"
			android:backgroundTint="@color/primary"
			android:paddingHorizontal="16dp"
			android:text="兑换"
			android:textColor="@color/white"
			android:textSize="12sp"
			app:cornerRadius="18dp" />  <!-- 圆角值随高度调整 -->
		</LinearLayout>
	</LinearLayout>
</com.google.android.material.card.MaterialCardView>
