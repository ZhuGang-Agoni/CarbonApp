<?xml version="1.0" encoding="utf-8"?>
<!-- 1. 外层包裹 NestedScrollView 实现全局滚动 -->
<androidx.core.widget.NestedScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:fillViewport="true"> <!-- 关键：让子布局填充滚动区域 -->

	<androidx.constraintlayout.widget.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
	android:background="@color/background_light">

	<!-- 顶部导航栏 -->
	<LinearLayout
		android:id="@+id/toolbar"
		android:layout_width="match_parent"
		android:layout_height="56dp"
		android:background="@color/primary"
		android:orientation="horizontal"
		android:paddingStart="16dp"
		android:paddingEnd="16dp"
		app:layout_constraintTop_toTopOf="parent">

		<ImageView
			android:id="@+id/backButton"
			android:layout_width="24dp"
			android:layout_height="24dp"
			android:layout_gravity="center_vertical"
			android:src="@drawable/ic_back" />

		<TextView
			android:id="@+id/title"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:layout_weight="1"
			android:gravity="center"
			android:text="碳积分商城"
			android:textColor="@color/white"
			android:textSize="18sp"
			android:textStyle="bold" />

		<ImageView
			android:id="@+id/searchButton"
			android:layout_width="24dp"
			android:layout_height="24dp"
			android:layout_gravity="center_vertical"
			android:layout_marginEnd="16dp"
			android:src="@drawable/ic_search" />
	</LinearLayout>

	<!-- 积分信息卡片 -->
	<androidx.cardview.widget.CardView
		android:id="@+id/pointsCard"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginStart="16dp"
		android:layout_marginEnd="16dp"
		android:layout_marginTop="16dp"
		app:cardBackgroundColor="@color/card_background"
		app:cardCornerRadius="12dp"
		app:cardElevation="4dp"
		app:layout_constraintTop_toBottomOf="@id/toolbar">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:padding="16dp">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="我的碳积分"
				android:textColor="@color/secondary_text"
				android:textSize="14sp" />

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="8dp"
				android:orientation="horizontal"
				android:gravity="center_vertical">

				<ImageView
					android:layout_width="24dp"
					android:layout_height="24dp"
					android:src="@drawable/ic_points" />

				<TextView
					android:id="@+id/carbon_point"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginStart="8dp"
					android:text="1250"
					android:textColor="@color/primary_text"
					android:textSize="24sp"
					android:textStyle="bold" />

				<Button
					android:id="@+id/exchangeHistoryButton"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginStart="16dp"
					android:backgroundTint="@color/primary_light"
					android:text="兑换记录"
					android:textColor="@color/white"
					android:textSize="12sp"
					app:cornerRadius="12dp" />

				<Button
					android:id="@+id/earnMoreButton"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginStart="8dp"
					android:backgroundTint="@color/primary_light"
					android:text="赚取更多"
					android:textColor="@color/white"
					android:textSize="12sp"
					app:cornerRadius="12dp" />
			</LinearLayout>
		</LinearLayout>
	</androidx.cardview.widget.CardView>

	<!-- 商品分类导航 -->
	<HorizontalScrollView
		android:id="@+id/categoryScrollView"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="16dp"
		android:fillViewport="true"
		android:paddingStart="16dp"
		android:paddingEnd="16dp"
		app:layout_constraintTop_toBottomOf="@id/pointsCard">

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:gravity="center_vertical">

			<Button
				android:id="@+id/categoryAll"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginEnd="8dp"
				android:backgroundTint="@color/primary"
				android:text="全部"
				android:textColor="@color/white"
				android:textSize="14sp"
				app:cornerRadius="16dp"
				android:paddingStart="16dp"
				android:paddingEnd="16dp" />

			<Button
				android:id="@+id/categoryEco"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginEnd="8dp"
				android:backgroundTint="@color/button_background"
				android:text="环保产品"
				android:textColor="@color/primary_text"
				android:textSize="14sp"
				app:cornerRadius="16dp"
				android:paddingStart="16dp"
				android:paddingEnd="16dp" />

			<Button
				android:id="@+id/categoryPlant"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginEnd="8dp"
				android:backgroundTint="@color/button_background"
				android:text="种植权益"
				android:textColor="@color/primary_text"
				android:textSize="14sp"
				app:cornerRadius="16dp"
				android:paddingStart="16dp"
				android:paddingEnd="16dp" />

			<Button
				android:id="@+id/categoryExperience"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginEnd="8dp"
				android:backgroundTint="@color/button_background"
				android:text="体验活动"
				android:textColor="@color/primary_text"
				android:textSize="14sp"
				app:cornerRadius="16dp"
				android:paddingStart="16dp"
				android:paddingEnd="16dp" />

			<Button
				android:id="@+id/categoryService"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:backgroundTint="@color/button_background"
				android:text="服务权益"
				android:textColor="@color/primary_text"
				android:textSize="14sp"
				app:cornerRadius="16dp"
				android:paddingStart="16dp"
				android:paddingEnd="16dp" />
		</LinearLayout>
	</HorizontalScrollView>

	<!-- 热门推荐标题 -->
	<TextView
		android:id="@+id/hotTitle"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="16dp"
		android:layout_marginTop="24dp"
		android:text="热门推荐"
		android:textColor="@color/primary_text"
		android:textSize="18sp"
		android:textStyle="bold"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/categoryScrollView" />

	<!-- 热门推荐商品网格 -->
	<androidx.recyclerview.widget.RecyclerView
		android:id="@+id/hotProductsRecyclerView"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginStart="16dp"
		android:layout_marginEnd="16dp"
		android:layout_marginTop="16dp"
		app:layout_constraintTop_toBottomOf="@id/hotTitle"
		app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
		app:spanCount="2"
		tools:listitem="@layout/item_product_card" />

	<!-- 最新上架标题 -->
	<TextView
		android:id="@+id/newTitle"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="16dp"
		android:layout_marginTop="24dp"
		android:text="最新上架"
		android:textColor="@color/primary_text"
		android:textSize="18sp"
		android:textStyle="bold"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/hotProductsRecyclerView" />

	<!-- 最新上架商品列表（关键修复：约束到底部 + 底部间距） -->
	<androidx.recyclerview.widget.RecyclerView
		android:id="@+id/newProductsRecyclerView"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginStart="16dp"
		android:layout_marginEnd="16dp"
		android:layout_marginTop="16dp"
		android:layout_marginBottom="32dp"
	app:layout_constraintTop_toBottomOf="@id/newTitle"
	app:layout_constraintBottom_toBottomOf="parent"
	app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
	tools:listitem="@layout/item_product_horizontal" />

</androidx.constraintlayout.widget.ConstraintLayout>
	</androidx.core.widget.NestedScrollView>