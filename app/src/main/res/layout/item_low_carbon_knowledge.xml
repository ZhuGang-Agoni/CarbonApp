<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_margin="8dp"
	app:cardCornerRadius="12dp"
	app:cardElevation="4dp"
	app:cardBackgroundColor="#F5F7FA"> <!-- 添加浅色基础背景 -->

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="100dp"
		android:padding="16dp">

		<!-- 改进后的渐变背景 -->
		<View
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="@drawable/eco_bg" />

		<ImageView
			android:id="@+id/iv_knowledge_image"
			android:layout_width="60dp"
			android:layout_height="60dp"
			android:layout_alignParentStart="true"
			android:layout_centerVertical="true"
			android:contentDescription="知识图片"
			android:scaleType="centerCrop"
			android:background="@drawable/image_placeholder" /> <!-- 添加图片占位符 -->

		<TextView
			android:id="@+id/tv_knowledge_title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_toEndOf="@id/iv_knowledge_image"
			android:layout_centerVertical="true"
			android:layout_marginStart="16dp"
			android:textSize="18sp"
			android:textColor="#2C3E50"
		android:textStyle="bold"
		android:shadowColor="#40000000"
		android:shadowDx="1"
		android:shadowDy="1"
		android:shadowRadius="2"/>

		<com.airbnb.lottie.LottieAnimationView
			android:id="@+id/lottie_indicator"
			android:layout_width="30dp"
			android:layout_height="30dp"
			android:layout_alignParentEnd="true"
			android:layout_centerVertical="true"
			app:lottie_autoPlay="true"
			app:lottie_loop="true"
			android:visibility="gone"/>

	</RelativeLayout>
</androidx.cardview.widget.CardView>