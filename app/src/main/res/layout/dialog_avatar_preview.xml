<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="300dp"
	android:layout_height="300dp"
	android:padding="16dp">

	<!-- 1. 主头像（底层） -->
	<com.google.android.material.imageview.ShapeableImageView
		android:id="@+id/userAvatar"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:scaleType="centerCrop"
		android:src="@drawable/default_avatar"
		app:shapeAppearanceOverlay="@style/AvatarShapeAppearance" />

	<!-- 2. 动态头像框（中层） -->
	<com.google.android.material.imageview.ShapeableImageView
		android:id="@+id/avatarFrame"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:scaleType="fitCenter"
		android:visibility="gone"
		app:shapeAppearanceOverlay="@style/CircleAvatarShape"
		android:contentDescription="头像框" />

	<!-- 3. 动态树叶挂件（顶层） -->
	<ImageView
		android:id="@+id/avatarAccessory"
		android:layout_width="40dp"
		android:layout_height="40dp"
		android:layout_gravity="top|end"
		android:layout_marginTop="8dp"
		android:layout_marginEnd="8dp"
		android:visibility="gone"
		android:scaleType="fitCenter"
		android:contentDescription="头像挂件" />
</FrameLayout>