<?xml version="1.0" encoding="utf-8"?>
<!-- 外层添加ScrollView，使整个页面可滚动 -->
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:fillViewport="true">

	<androidx.constraintlayout.widget.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/background_light_green">

		<!-- 用户信息区 -->
		<LinearLayout
			android:id="@+id/userInfoSection"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:padding="16dp"
			app:layout_constraintTop_toTopOf="parent">

			<com.google.android.material.imageview.ShapeableImageView
				android:id="@+id/userAvatar"
				android:layout_width="64dp"
				android:layout_height="64dp"
				android:scaleType="centerCrop"
				app:shapeAppearanceOverlay="@style/AvatarShapeAppearance"
				android:src="@drawable/default_avatar"/>
			<LinearLayout
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginStart="16dp"
				android:layout_weight="1"
				android:orientation="vertical">

				<TextView
					android:id="@+id/userName"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="低碳达人"
					android:textColor="@color/primary_text"
					android:textSize="18sp"
					android:textStyle="bold" />

				<TextView
					android:id="@+id/userCarbonInfo"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="4dp"
					android:textColor="@color/secondary_text"
					android:textSize="14sp" />
			</LinearLayout>

			<ImageView
				android:id="@+id/notificationIcon"
				android:layout_width="40dp"
				android:layout_height="40dp"
				android:layout_gravity="center_vertical"
				android:src="@drawable/notification_filling" />
		</LinearLayout>

		<!-- 数据概览卡片 -->
		<androidx.cardview.widget.CardView
			android:id="@+id/dataOverviewCard"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginStart="16dp"
			android:layout_marginEnd="16dp"
			android:layout_marginTop="16dp"
			app:cardBackgroundColor="@color/card_background"
			app:cardCornerRadius="16dp"
			app:cardElevation="4dp"
			app:layout_constraintTop_toBottomOf="@id/userInfoSection">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:padding="16dp">

				<LinearLayout
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:gravity="center"
					android:orientation="vertical">

					<ImageView
						android:layout_width="32dp"
						android:layout_height="29dp"
						android:src="@drawable/emission" />

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="8dp"
						android:text="今日减排"
						android:textColor="@color/secondary_text"
						android:textSize="12sp" />

					<TextView
						android:id="@+id/reduce_carbon"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="5.2kg"
						android:textColor="@color/primary_text"
						android:textSize="18sp"
						android:textStyle="bold" />
				</LinearLayout>

				<View
					android:layout_width="1dp"
					android:layout_height="match_parent"
					android:background="@color/divider_color" />

				<LinearLayout
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:gravity="center"
					android:orientation="vertical">

					<ImageView
						android:layout_width="32dp"
						android:layout_height="32dp"
						android:src="@drawable/tree" />

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="8dp"
						android:text="累计种树"
						android:textColor="@color/secondary_text"
						android:textSize="12sp" />

					<TextView
						android:id="@+id/plant_tree"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="12棵"
						android:textColor="@color/primary_text"
						android:textSize="18sp"
						android:textStyle="bold" />
				</LinearLayout>

				<View
					android:layout_width="1dp"
					android:layout_height="match_parent"
					android:background="@color/divider_color" />

				<LinearLayout
					android:layout_width="0dp"
					android:layout_height="75dp"
					android:layout_weight="1"
					android:gravity="center"
					android:orientation="vertical">

					<ImageView
						android:layout_width="32dp"
						android:layout_height="32dp"
						android:src="@drawable/rank" />

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="8dp"
						android:text="低碳排名"
						android:textColor="@color/secondary_text"
						android:textSize="12sp" />

					<TextView
						android:id="@+id/rank"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Top 12%"
						android:textColor="@color/primary_text"
						android:textSize="18sp"
						android:textStyle="bold" />
				</LinearLayout>
			</LinearLayout>
		</androidx.cardview.widget.CardView>

		<!-- 功能导航标题 -->
		<TextView
			android:id="@+id/functionTitle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginStart="16dp"
			android:layout_marginTop="24dp"
			android:text="低碳功能"
			android:textColor="@color/primary_text"
			android:textSize="18sp"
			android:textStyle="bold"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@id/dataOverviewCard" />

		<!-- 功能导航网格 -->
		<LinearLayout
			android:id="@+id/functionGrid"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginStart="16dp"
			android:layout_marginEnd="16dp"
			android:layout_marginTop="16dp"
			android:orientation="vertical"
			app:layout_constraintTop_toBottomOf="@id/functionTitle">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">

				<LinearLayout
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:gravity="center"
					android:orientation="vertical"
					android:padding="8dp">

					<ImageView
						android:layout_width="48dp"
						android:layout_height="48dp"
						android:src="@drawable/go" />

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="8dp"
						android:text="绿色出行"
						android:textColor="@color/primary_text"
						android:textSize="14sp" />
				</LinearLayout>

				<LinearLayout
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:gravity="center"
					android:orientation="vertical"
					android:padding="8dp">

					<ImageView
						android:layout_width="48dp"
						android:layout_height="48dp"
						android:src="@drawable/energy" />

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="8dp"
						android:text="节能统计"
						android:textColor="@color/primary_text"
						android:textSize="14sp" />
				</LinearLayout>

				<LinearLayout
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:gravity="center"
					android:orientation="vertical"
					android:padding="8dp">

					<ImageView
						android:layout_width="48dp"
						android:layout_height="48dp"
						android:src="@drawable/garbage" />

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="8dp"
						android:text="垃圾分类"
						android:textColor="@color/primary_text"
						android:textSize="14sp" />
				</LinearLayout>

				<LinearLayout
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:gravity="center"
					android:orientation="vertical"
					android:padding="8dp">

					<ImageView
						android:layout_width="48dp"
						android:layout_height="48dp"
						android:src="@drawable/supermarket__1_" />

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="8dp"
						android:text="绿色商城"
						android:textColor="@color/primary_text"
						android:textSize="14sp" />
				</LinearLayout>
			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">

				<LinearLayout
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:gravity="center"
					android:orientation="vertical"
					android:padding="8dp">
					<ImageView
						android:layout_width="48dp"
						android:layout_height="48dp"
						android:src="@drawable/x1_carbon_footprint"/>
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="碳足迹计算"
						android:layout_marginTop="8dp"/>
				</LinearLayout>

				<LinearLayout
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:gravity="center"
					android:orientation="vertical"
					android:padding="8dp">
					<ImageView
						android:layout_width="48dp"
						android:layout_height="48dp"
						android:src="@drawable/___"/>
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="更多功能"
						android:layout_marginTop="8dp"/>
				</LinearLayout>

				<!-- 空白占位，保持4列结构 -->
				<LinearLayout
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:gravity="center"
					android:orientation="vertical"
					android:padding="8dp"/>

				<LinearLayout
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:gravity="center"
					android:orientation="vertical"
					android:padding="8dp"/>
			</LinearLayout>
		</LinearLayout>

		<!-- 推荐内容标题 -->
		<TextView
			android:id="@+id/recommendationTitle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginStart="16dp"
			android:layout_marginTop="24dp"
			android:text="低碳知识"
			android:textColor="@color/primary_text"
			android:textSize="18sp"
			android:textStyle="bold"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@id/functionGrid"
			/>


		<!-- 低碳知识滚动区域，用RecyclerView -->
		<androidx.recyclerview.widget.RecyclerView
			android:id="@+id/lowCarbonKnowledgeRv"
			android:layout_width="match_parent"
			android:layout_height="160dp"
			android:layout_marginTop="8dp"
			android:paddingStart="16dp"
			android:paddingEnd="16dp"
			app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
			app:layout_constraintTop_toBottomOf="@id/recommendationTitle" />

		<!-- 活动推荐标题 -->
		<TextView
			android:id="@+id/activityTitle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginStart="16dp"
			android:layout_marginTop="24dp"
			android:text="低碳活动"
			android:textColor="@color/primary_text"
			android:textSize="18sp"
			android:textStyle="bold"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@id/lowCarbonKnowledgeRv" />

		<!-- 活动推荐卡片 -->
		<androidx.cardview.widget.CardView
			android:id="@+id/activityCard"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginStart="16dp"
			android:layout_marginEnd="16dp"
			android:layout_marginTop="16dp"
			android:layout_marginBottom="32dp"
		app:cardBackgroundColor="@color/card_background"
		app:cardCornerRadius="16dp"
		app:cardElevation="4dp"
		app:layout_constraintTop_toBottomOf="@id/activityTitle">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<ImageView
				android:layout_width="match_parent"
				android:layout_height="160dp"
				android:scaleType="centerCrop"
				android:src="@drawable/go" />

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:padding="16dp">

				<LinearLayout
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:orientation="vertical">

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="城市骑行日"
						android:textColor="@color/primary_text"
						android:textSize="16sp"
						android:textStyle="bold" />

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="8dp"
						android:text="3月22日 | 9:00-16:00"
						android:textColor="@color/secondary_text"
						android:textSize="14sp" />

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="4dp"
						android:text="市中心集合点"
						android:textColor="@color/secondary_text"
						android:textSize="14sp" />
				</LinearLayout>

				<Button
					android:id="@+id/registerButton"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical"
				android:backgroundTint="@color/blue"
				android:text="报名参加"
				android:textColor="@color/white"
				android:textSize="14sp"
				app:cornerRadius="16dp" />
			</LinearLayout>
		</LinearLayout>
	</androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
	</ScrollView>