<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:fillViewport="true">

	<androidx.constraintlayout.widget.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/background_light_green">

		<!-- 用户信息区 -->
		<LinearLayout
			android:id="@+id/userInfoSection"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:padding="16dp"
			app:layout_constraintTop_toTopOf="parent">

			<FrameLayout
				android:layout_width="64dp"
				android:layout_height="64dp">

				<!-- 1. 主头像（底层） -->
				<com.google.android.material.imageview.ShapeableImageView
					android:id="@+id/userAvatar"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:scaleType="centerCrop"
					android:src="@drawable/default_avatar"
					app:shapeAppearanceOverlay="@style/AvatarShapeAppearance" />

				<!-- 2. 动态头像框（中层 - 内圈） -->
				<com.google.android.material.imageview.ShapeableImageView
					android:id="@+id/avatarFrameInner"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:scaleType="fitXY"
					android:visibility="gone"
					app:shapeAppearanceOverlay="@style/CircleAvatarShape"
					android:contentDescription="头像内框" />

				<!-- 3. 动态头像框（中层 - 外圈） -->
				<com.google.android.material.imageview.ShapeableImageView
					android:id="@+id/avatarFrameOuter"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:scaleType="fitXY"
					android:visibility="gone"
					app:shapeAppearanceOverlay="@style/CircleAvatarShape"
					android:contentDescription="头像外框" />

				<!-- 4. 动态树叶挂件（顶层，右上角） -->
				<ImageView
					android:id="@+id/avatarAccessory"
					android:layout_width="24dp"
					android:layout_height="24dp"
					android:layout_gravity="top|end"
					android:layout_marginTop="-2dp"
					android:layout_marginEnd="-2dp"
					android:visibility="gone"
					android:contentDescription="树叶挂件" />
			</FrameLayout>

			<LinearLayout
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginStart="16dp"
				android:layout_weight="1"
				android:orientation="vertical">

				<TextView
					android:id="@+id/userName"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="用户名字：Agoni"
					android:textColor="@color/primary_text"
					android:textSize="18sp"
					android:textStyle="bold" />

				<!-- 勋章区域 -->
				<LinearLayout
					android:id="@+id/userMedal"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:orientation="horizontal"
					android:gravity="center_vertical"
					android:layout_marginTop="4dp">

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="勋章称号："
						android:textColor="@color/primary_text"
						android:textSize="18sp"
						android:textStyle="bold" />

					<!-- 勋章图标 -->
					<ImageView
						android:id="@+id/medalIcon"
						android:layout_width="24dp"
						android:layout_height="24dp"
						android:src="@drawable/default_medal"
						android:visibility="gone"
						android:contentDescription="勋章图标"
						android:layout_marginEnd="4dp"/>

					<!-- 勋章文字描述 -->
					<TextView
						android:id="@+id/medalText"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="无"
						android:textColor="@color/primary_text"
						android:textSize="18sp"
						android:textStyle="bold" />
				</LinearLayout>

				<TextView
					android:id="@+id/userCarbonInfo"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="4dp"
					android:textColor="@color/secondary_text"
					android:textSize="14sp" />
			</LinearLayout>

			<LinearLayout
				android:layout_width="wrap_content"
				android:orientation="vertical"
				android:layout_height="wrap_content">

				<ImageView
					android:id="@+id/notificationIcon"
					android:layout_width="40dp"
					android:layout_height="40dp"
					android:layout_gravity="center_vertical"
					android:src="@drawable/notification_filling" />

				<ImageView
					android:id="@+id/qiandao"
					android:layout_width="40dp"
					android:layout_height="40dp"
					android:layout_gravity="center_vertical"
					android:src="@drawable/calendar" />
			</LinearLayout>
		</LinearLayout>

		<!-- 数据概览卡片 -->
		<androidx.cardview.widget.CardView
			android:id="@+id/dataOverviewCard"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginStart="16dp"
			android:layout_marginEnd="16dp"
			android:layout_marginTop="16dp"
			app:cardBackgroundColor="@color/card_background"
			app:cardCornerRadius="16dp"
			app:cardElevation="4dp"
			app:layout_constraintTop_toBottomOf="@id/userInfoSection">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:padding="16dp">

				<LinearLayout
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:gravity="center"
					android:orientation="vertical">

					<ImageView
						android:layout_width="32dp"
						android:layout_height="29dp"
						android:src="@drawable/emission" />

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="8dp"
						android:text="今日减排"
						android:textColor="@color/secondary_text"
						android:textSize="12sp" />

					<TextView
						android:id="@+id/reduce_carbon"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="5.2kg"
						android:textColor="@color/primary_text"
						android:textSize="18sp"
						android:textStyle="bold" />
				</LinearLayout>

				<View
					android:layout_width="1dp"
					android:layout_height="match_parent"
					android:background="@color/divider_color" />

				<LinearLayout
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:gravity="center"
					android:orientation="vertical">

					<ImageView
						android:layout_width="32dp"
						android:layout_height="32dp"
						android:src="@drawable/tree" />

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="8dp"
						android:text="累计种树"
						android:textColor="@color/secondary_text"
						android:textSize="12sp" />

					<TextView
						android:id="@+id/plant_tree"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="12棵"
						android:textColor="@color/primary_text"
						android:textSize="18sp"
						android:textStyle="bold" />
				</LinearLayout>

				<View
					android:layout_width="1dp"
					android:layout_height="match_parent"
					android:background="@color/divider_color" />

				<LinearLayout
					android:layout_width="0dp"
					android:layout_height="75dp"
					android:layout_weight="1"
					android:gravity="center"
					android:orientation="vertical">

					<ImageView
						android:layout_width="32dp"
						android:layout_height="32dp"
						android:src="@drawable/rank" />

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="8dp"
						android:text="低碳排名"
						android:textColor="@color/secondary_text"
						android:textSize="12sp" />

					<TextView
						android:id="@+id/rank"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Top 12%"
						android:textColor="@color/primary_text"
						android:textSize="18sp"
						android:textStyle="bold" />
				</LinearLayout>
			</LinearLayout>
		</androidx.cardview.widget.CardView>

		<!-- 功能导航标题 -->
		<TextView
			android:id="@+id/functionTitle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginStart="16dp"
			android:layout_marginTop="24dp"
			android:text="低碳功能"
			android:textColor="@color/primary_text"
			android:textSize="18sp"
			android:textStyle="bold"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@id/dataOverviewCard" />

		<!-- 功能导航网格 -->
		<LinearLayout
			android:id="@+id/functionGrid"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginStart="16dp"
			android:layout_marginEnd="16dp"
			android:layout_marginTop="16dp"
			android:orientation="vertical"
			app:layout_constraintTop_toBottomOf="@id/functionTitle">

			<!-- 第一行功能 -->
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">

				<!-- 绿色出行 -->
				<LinearLayout
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:gravity="center"
					android:orientation="vertical"
					android:padding="8dp">

					<ImageView
						android:layout_width="48dp"
						android:layout_height="48dp"
						android:src="@drawable/go" />

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="8dp"
						android:text="绿色出行"
						android:textColor="@color/primary_text"
						android:textSize="14sp" />
				</LinearLayout>

				<!-- 节能统计 -->
				<LinearLayout
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:gravity="center"
					android:orientation="vertical"
					android:padding="8dp">

					<ImageView
						android:layout_width="48dp"
						android:layout_height="48dp"
						android:src="@drawable/energy" />

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="8dp"
						android:text="节能统计"
						android:textColor="@color/primary_text"
						android:textSize="14sp" />
				</LinearLayout>

				<!-- 垃圾分类 -->
				<LinearLayout
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:gravity="center"
					android:orientation="vertical"
					android:padding="8dp">

					<ImageView
						android:layout_width="48dp"
						android:layout_height="48dp"
						android:src="@drawable/garbage" />

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="8dp"
						android:text="垃圾分类"
						android:textColor="@color/primary_text"
						android:textSize="14sp" />
				</LinearLayout>

				<!-- 绿色商城 -->
				<LinearLayout
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:gravity="center"
					android:orientation="vertical"
					android:padding="8dp">

					<ImageView
						android:layout_width="48dp"
						android:layout_height="48dp"
						android:src="@drawable/supermarket__1_" />

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="8dp"
						android:text="绿色商城"
						android:textColor="@color/primary_text"
						android:textSize="14sp" />
				</LinearLayout>
			</LinearLayout>

			<!-- 第二行功能 -->
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">

				<!-- 碳足迹计算 -->
				<LinearLayout
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:gravity="center"
					android:orientation="vertical"
					android:padding="8dp">
					<ImageView
						android:layout_width="48dp"
						android:layout_height="48dp"
						android:src="@drawable/x1_carbon_footprint__1_"/>
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="碳足迹计算"
						android:layout_marginTop="8dp"
						android:textColor="@color/primary_text"
						android:textSize="14sp"/>
				</LinearLayout>

				<!-- 低碳VR场景 -->
				<LinearLayout
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:gravity="center"
					android:orientation="vertical"
					android:padding="8dp">
					<ImageView
						android:layout_width="48dp"
						android:layout_height="48dp"
						android:src="@drawable/weather"
						android:contentDescription="低碳VR场景"/>
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="天气情况查询"
						android:layout_marginTop="8dp"
						android:textColor="@color/primary_text"
						android:textSize="14sp"/>
				</LinearLayout>

				<!-- 更多功能 -->
				<LinearLayout
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:gravity="center"
					android:orientation="vertical"
					android:padding="8dp">
					<ImageView
						android:layout_width="48dp"
						android:layout_height="48dp"
						android:src="@drawable/___"/>
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="更多功能"
						android:layout_marginTop="8dp"
						android:textColor="@color/primary_text"
						android:textSize="14sp"/>
				</LinearLayout>

				<!-- 占位 -->
				<LinearLayout
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:gravity="center"
					android:orientation="vertical"
					android:padding="8dp"/>
			</LinearLayout>
		</LinearLayout>

		<!-- 低碳知识标题 -->
		<androidx.constraintlayout.widget.ConstraintLayout
			android:id="@+id/knowledgeHeader"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginStart="16dp"
			android:layout_marginTop="24dp"
			app:layout_constraintTop_toBottomOf="@id/functionGrid">

			<TextView
				android:id="@+id/recommendationTitle"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="低碳知识"
				android:textColor="@color/primary_text"
				android:textSize="18sp"
				android:textStyle="bold"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toTopOf="parent"/>

			<ImageView
				android:id="@+id/updateIcon"
				android:layout_width="24dp"
				android:layout_height="24dp"
				android:layout_marginStart="280dp"
				android:src="@drawable/refresh"
				app:layout_constraintStart_toEndOf="@id/recommendationTitle"
				app:layout_constraintTop_toTopOf="@id/recommendationTitle"
				app:layout_constraintBottom_toBottomOf="@id/recommendationTitle"/>
		</androidx.constraintlayout.widget.ConstraintLayout>

		<!-- 低碳知识列表 -->
		<androidx.recyclerview.widget.RecyclerView
			android:id="@+id/lowCarbonKnowledgeRv"
			android:layout_width="match_parent"
			android:layout_height="160dp"
			android:layout_marginTop="8dp"
			android:paddingStart="16dp"
			android:paddingEnd="16dp"
			app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
			app:layout_constraintTop_toBottomOf="@+id/knowledgeHeader" />

		<!-- 活动推荐标题栏（增加查看全部按钮） -->
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginStart="16dp"
			android:layout_marginEnd="16dp"
			android:layout_marginTop="24dp"
			android:id="@+id/activity"
			android:orientation="horizontal"
			app:layout_constraintTop_toBottomOf="@id/lowCarbonKnowledgeRv">

			<TextView
				android:id="@+id/activityTitle"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="低碳活动"
				android:textColor="@color/primary_text"
				android:textSize="18sp"
				android:textStyle="bold" />

			<TextView
				android:id="@+id/seeAllActivity"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="查看全部"
				android:textColor="@color/blue_primary"
				android:textSize="14sp"
				android:drawableEnd="@drawable/arrow_right"
				android:drawablePadding="4dp" />
		</LinearLayout>

		<!-- 活动列表（使用RecyclerView展示多个活动） -->
		<androidx.recyclerview.widget.RecyclerView
			android:id="@+id/activityRecyclerView"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="16dp"
			android:layout_marginBottom="32dp"
			android:paddingStart="16dp"
			android:paddingEnd="16dp"
			app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
			app:layout_constraintTop_toBottomOf="@id/activity"
			app:spanCount="1" />
	</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>