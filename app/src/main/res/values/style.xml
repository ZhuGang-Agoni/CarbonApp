<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="AvatarShapeAppearance" parent="">
		<item name="cornerFamily">rounded</item>
		<item name="cornerSize">50%</item> <!-- 圆形头像 -->
	</style>
	<style name="TabTextStyle" parent="TextAppearance.Design.Tab">
		<item name="android:textSize">14sp</item>
		<item name="android:textStyle">bold</item>
	</style>
	<!-- 已签到日期文本样式 -->
	<style name="CalendarSignedDate" parent="TextAppearance.AppCompat.Small">
		<!-- 已签到日期文字颜色 -->
		<item name="android:textColor">#4CAF50</item>
		<!-- 已签到日期文字加粗 -->
		<item name="android:textStyle">bold</item>
		<!-- 可根据需要添加其他样式，如文字大小 -->
		<item name="android:textSize">14sp</item>
	</style>
	<!-- 可选：未签到日期样式（用于对比） -->
	<style name="CalendarDefaultDate" parent="TextAppearance.AppCompat.Small">
		<item name="android:textColor">#666666</item>
		<item name="android:textSize">14sp</item>
	</style>

	<!-- 为CalendarView指定选中状态的Drawable，避免null -->
	<style name="MyCalendarView" parent="android:Widget.CalendarView">
		<item name="android:selectedWeekBackgroundColor">@color/primary_light</item> <!-- 选中周背景 -->
		<item name="android:dateTextAppearance">@style/CalendarDate</item>
		<item name="android:weekNumberColor">@color/text_secondary</item>
	</style>

	<style name="CalendarDate" parent="TextAppearance.AppCompat.Small">
		<item name="android:textColor">@color/black</item>
		<item name="android:textSize">14sp</item>
	</style>
	<!-- 可根据需要添加卡片和标题的样式 -->
	<style name="FullScreenDialog" parent="Theme.AppCompat.Light.NoActionBar">
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowFullscreen">true</item>
		<item name="android:windowIsFloating">false</item>
		<item name="android:windowBackground">@android:color/transparent</item>
		<item name="android:windowContentOverlay">@null</item>
		<item name="android:windowAnimationStyle">@style/DialogAnimation</item>
	</style>
	<style name="CircleFrameShape">
		<item name="cornerFamily">rounded</item>
		<item name="cornerSize">50%</item>  <!-- 圆形 -->
	</style>
	<style name="DialogAnimation">
		<item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
		<item name="android:windowExitAnimation">@anim/slide_out_button</item>
	</style>
	<!-- 头像框动画样式 -->
	<style name="AvatarFrameAnimation">
		<item name="android:duration">2000</item>
		<item name="android:repeatCount">infinite</item>
		<item name="android:interpolator">@android:anim/linear_interpolator</item>
	</style>

	<style name="CircleAvatarShape">
		<item name="cornerFamily">rounded</item>
		<item name="cornerSize">50%</item>  <!-- 关键：让控件变成圆形 -->
	</style>

	<!-- 挂件动画样式 -->
	<style name="AccessoryAnimation">
		<item name="android:duration">2000</item>
		<item name="android:repeatCount">infinite</item>
		<item name="android:repeatMode">reverse</item>
	</style>
	<!-- 日历头部样式 -->
	<style name="CalendarHeader" parent="TextAppearance.MaterialComponents.Body1">
		<item name="android:textColor">@color/eco_green</item>
		<item name="android:textSize">16sp</item>
	</style>



	<!-- 日历星期样式 -->
	<style name="CalendarWeekDay" parent="TextAppearance.MaterialComponents.Caption">
		<item name="android:textColor">@color/eco_subtext</item>
	</style>
	<style name="AppTheme" parent="Theme.Material3.Light.NoActionBar">
		<item name="colorPrimary">@color/primary</item>
		<item name="colorPrimaryVariant">@color/primary_variant</item>
		<item name="colorSecondary">@color/secondary</item>
		<item name="colorSecondaryVariant">@color/secondary_variant</item>
		<item name="android:windowBackground">@color/background</item>
		<item name="colorSurface">@color/surface</item>
		<item name="colorOnSurface">@color/on_surface</item>
	</style>


</resources>